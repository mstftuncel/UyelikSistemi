
@{
    ViewBag.Title = "Yorum Sayfası";
}

<h2>Yorum Sayfası</h2>
<div class="row">
    <div class="col-md-8 col-md-push-4">

        <div class="form-group">
            <h3>Yorumlar</h3>
            <hr />
        </div>

        <div class="form-group">
            <ul class="media-list">

                    <li class="media">
                        <div class="media-left">
                            <a href="#">
                                <img class="media-object img-circle img-thumbnail" src="http://placehold.it/64x64">
                            </a>
                        </div>
                        <div class="media-body">
                            <h4 class="media-heading">mustafa.tuncel</h4>
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                        </div>
                    </li>
            </ul>
        </div>
        @using (Html.BeginForm("Index","Yorum", FormMethod.Post))
        {
            <div class="form-group">
                <textarea cols="30" rows="3" id="text" name="CommentText" class="form-control" placeholder="Yorum Giriniz." maxlength="255"></textarea>
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-send"></span> Send
                </button>
            </div>
        }


    </div>
</div>


